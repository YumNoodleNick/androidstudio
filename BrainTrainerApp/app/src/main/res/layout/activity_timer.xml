<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.laptop.braintrainerapp.TimerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30S"
        android:id="@+id/timerTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 + 1"
        android:id="@+id/somTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:id="@+id/scoreTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25dp"
        android:background="#9cffde"
        android:textColor="#000000" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:rowCount="2"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:text="1"
            android:id="@+id/button"
            android:layout_row="0"
            android:layout_column="0"
            android:tag="0"
            android:textColor="#000000"
            android:textSize="75dp"
            android:background="#ff7375"
            android:onClick="checkUitkomst" />

        <Button
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:text="2"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:tag="1"
            android:textColor="#000000"
            android:textSize="75dp"
            android:background="#8894ff"
            android:onClick="checkUitkomst" />

        <Button
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:text="3"
            android:id="@+id/button3"
            android:layout_row="1"
            android:layout_column="0"
            android:tag="2"
            android:textColor="#000000"
            android:textSize="75dp"
            android:background="#92ff97"
            android:onClick="checkUitkomst" />

        <Button
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:text="4"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="1"
            android:tag="3"
            android:textColor="#000000"
            android:textSize="75dp"
            android:background="#fff18a"
            android:onClick="checkUitkomst" />
    </GridLayout>
</RelativeLayout>
